    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./ts",
    "outDir": "./js",
    "jsx": "react-native",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  }
}
